<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto">

	<data>
		<variable name="yearMonth" type="java.time.YearMonth" />
		<variable name="monthName" type="String" />
		<variable name="stats" type="com.boardgamegeek.ui.viewmodel.PlayStatsForMonth" />
		<variable name="listener" type="com.boardgamegeek.ui.HistoryOverviewFragment.Listener" />
	</data>

	<androidx.cardview.widget.CardView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginHorizontal="@dimen/material_margin_horizontal_card"
		android:layout_marginVertical="@dimen/material_margin_vertical_card"
		app:cardCornerRadius="@dimen/material_margin_horizontal_card"
		android:foreground="?android:attr/selectableItemBackground"
		android:onClick="@{() -> listener.onNavigateToMonth(yearMonth)}">

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@color/black_overlay_light">

			<ImageView
				android:id="@+id/background_image"
				android:layout_width="match_parent"
				android:layout_height="62dp"
				tools:ignore="ContentDescription" />

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:gravity="center_vertical">

				<com.boardgamegeek.ui.HistoryCalendarThumbnail
					android:layout_width="56dp"
					android:layout_height="56dp"
					android:layout_marginVertical="7dp"
					android:layout_marginLeft="7dp"
					android:layout_marginStart="7dp"
					android:layout_marginRight="@dimen/material_margin_horizontal"
					android:layout_marginEnd="@dimen/material_margin_horizontal"
					app:yearMonth="@{yearMonth}"
					app:playsByDate="@{stats.playsByDate}" />

				<TextView
					android:id="@+id/text_month"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:layout_marginRight="10dp"
					android:layout_marginEnd="10dp"
					android:textAppearance="?attr/textAppearanceListItem"
					android:textStyle="bold"
					android:textColor="@color/background"
					android:text="@{monthName}"
					tools:text="Month" />

				<TextView
					android:id="@+id/item_number"
					android:layout_width="80dp"
					android:layout_height="wrap_content"
					android:layout_marginRight="10dp"
					android:layout_marginEnd="10dp"
					android:textAppearance="?attr/textAppearanceListItem"
					android:textColor="@color/background"
					android:gravity="end"
					android:textAlignment="viewEnd"
					android:text="@{stats.gamesPlayed + ` games`}"
					tools:text="123 games" />

				<TextView
					android:id="@+id/content"
					android:layout_width="80dp"
					android:layout_height="wrap_content"
					android:layout_marginRight="10dp"
					android:layout_marginEnd="10dp"
					android:textAppearance="?attr/textAppearanceListItem"
					android:textColor="@color/background"
					android:gravity="end"
					android:textAlignment="viewEnd"
					android:text="@{stats.numberOfPlays + ` plays`}"
					tools:text="123 plays" />

			</LinearLayout>
		</RelativeLayout>
	</androidx.cardview.widget.CardView>
</layout>
