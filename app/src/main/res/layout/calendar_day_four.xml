<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/calendar_day_four"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:weightSum="2">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		android:layout_marginTop="1dp"
		android:weightSum="2"
		android:baselineAligned="false"
	>
		<androidx.cardview.widget.CardView
			android:id="@+id/calendar_day_1_frame"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:layout_marginRight="1dp"
			android:layout_marginEnd="1dp"
			app:cardCornerRadius="3dp"
			tools:ignore="NestedWeights"
		>
			<ImageView
				android:id="@+id/calendar_day_1"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:scaleType="center"
				tools:ignore="ContentDescription"
			/>
		</androidx.cardview.widget.CardView>
		<androidx.cardview.widget.CardView
			android:id="@+id/calendar_day_2_frame"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			app:cardCornerRadius="3dp"
			tools:ignore="NestedWeights"
		>
			<ImageView
				android:id="@+id/calendar_day_2"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:scaleType="center"
				tools:ignore="ContentDescription"
			/>
		</androidx.cardview.widget.CardView>
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		android:layout_marginTop="1dp"
		android:weightSum="2"
		android:baselineAligned="false"
	>
		<androidx.cardview.widget.CardView
			android:id="@+id/calendar_day_3_frame"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:layout_marginRight="1dp"
			android:layout_marginEnd="1dp"
			app:cardCornerRadius="3dp"
			tools:ignore="NestedWeights"
		>
			<ImageView
				android:id="@+id/calendar_day_3"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:scaleType="center"
				tools:ignore="ContentDescription"
			/>
		</androidx.cardview.widget.CardView>
		<androidx.cardview.widget.CardView
			android:id="@+id/calendar_day_4_frame"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			app:cardCornerRadius="3dp"
			tools:ignore="NestedWeights"
		>
			<ImageView
				android:id="@+id/calendar_day_4"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:scaleType="center"
				tools:ignore="ContentDescription"
			/>
		</androidx.cardview.widget.CardView>
	</LinearLayout>
</LinearLayout>
