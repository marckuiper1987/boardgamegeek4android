<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/calendar_day_three"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:weightSum="2">

	<ImageView
		android:id="@+id/calendar_day_1"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		android:scaleType="center"
		tools:ignore="ContentDescription,Suspicious0dp" />

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		android:layout_marginTop="1dp"
		android:weightSum="2">

		<ImageView
			android:id="@+id/calendar_day_2"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:layout_marginRight="1dp"
			android:scaleType="center"
			tools:ignore="ContentDescription,NestedWeights,Suspicious0dp"
			android:layout_marginEnd="1dp" />

		<ImageView
			android:id="@+id/calendar_day_3"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:scaleType="center"
			tools:ignore="ContentDescription,Suspicious0dp" />

	</LinearLayout>

</LinearLayout>
