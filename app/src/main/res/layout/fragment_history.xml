<?xml version="1.0" encoding="utf-8"?>
<layout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools">

	<data>
		<variable name="viewModel" type="com.boardgamegeek.ui.viewmodel.HistoryViewModel" />
		<variable name="listener" type="com.boardgamegeek.ui.CalendarViewListener" />
	</data>

	<FrameLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@color/background">

		<androidx.recyclerview.widget.RecyclerView
			android:id="@+id/history_summary_list"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			app:layoutManager="LinearLayoutManager"
			tools:listitem="@layout/fragment_calendar_overview_item" />

		<LinearLayout
			android:id="@+id/history_detail"
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="match_parent">

			<FrameLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

				<FrameLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:background="@color/border"
					android:paddingTop="7dp"
					android:paddingBottom="7dp">
					<include layout="@layout/calendar_header" />
				</FrameLayout>

				<com.kizitonwose.calendarview.CalendarView
					android:id="@+id/history_calendar"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					app:cv_dayViewResource="@layout/calendar_day"
					app:cv_monthHeaderResource="@layout/calendar_header"
					app:cv_orientation="horizontal"
					app:cv_outDateStyle="endOfGrid"
					app:cv_scrollMode="paged"
					android:background="@color/border"
					tools:ignore="NestedWeights" />
			</FrameLayout>

			<androidx.recyclerview.widget.RecyclerView
				android:id="@+id/recyclerView"
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:layout_weight="1" />
			<!--	android:nestedScrollingEnabled="false"-->

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@color/border"
				android:onClick="@{() -> listener.onNavigateToOverview()}">

				<TextView
					android:id="@+id/item_number"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:layout_margin="10dp"
					android:textAppearance="?attr/textAppearanceListItem"
					android:gravity="center"
					android:textAlignment="center"
					android:text="@{String.valueOf(viewModel.selectedMonthStats.gamesPlayed) + ` games`}"
					tools:text="123 games"
					tools:ignore="NestedWeights" />

				<TextView
					android:id="@+id/content"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:layout_margin="10dp"
					android:textAppearance="?attr/textAppearanceListItem"
					android:gravity="center"
					android:textAlignment="center"
					android:text="@{String.valueOf(viewModel.selectedMonthStats.numberOfPlays) + ` plays`}"
					tools:text="123 plays" />

			</LinearLayout>
		</LinearLayout>

	</FrameLayout>
</layout>
